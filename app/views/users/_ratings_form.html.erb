<%= form_with model: opinion, class: "new-rating text-uppercase" do |form| %>
  <div class="form-label"><%= form.label :text, "Rate a pillow" %></div>
  <div>
    <%= form.text_field :text, class: "input-field",
        placeholder: 'There\'s nothing to lie about' %>
  </div>
  <div class="creation-errors">
    <p> <%= locals[:error_messages] %></p>
  </div>
<%end%>
